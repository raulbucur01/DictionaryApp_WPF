<Window x:Class="DictionaryApp.Views.GameModule.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DictionaryApp.Views.GameModule"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="Joc" Height="450" Width="800"
        ResizeMode="NoResize">
    <Grid>
        <StackPanel Name="startStackPanel" VerticalAlignment="Center" Visibility="Collapsed">
            <Label Name="welcomeLabel" Content="Joc de ghicit cuvinte" Height="50" Width="280" FontSize="30" Margin="30"/>
            <Button Name="startBtn" Height="50" Width="150" Content="START" FontSize="30" Margin="30"
                    Click="startBtn_Click"/>
        </StackPanel>

        <Grid Name="gameGrid" Visibility="Visible">
            <Label Name="gameStatusLabel" Content="Ghiceste cuvintele:" FontSize="25" Margin="10,10,543,347"/>

            <Label Name="amountGuessedLabel" Content="Ghicite: 0/5" FontSize="25" Margin="624,10,10,347"/>

            <Label Name="clueLabel" Content="Indiciu: " VerticalAlignment="Top" Margin="90,129,599,0" Height="67" FontSize="25"/>

            <Image Name="clueImage" Height="180"  Width="180" Margin="303,72,317,182" Visibility="Visible"/>
            <Border BorderBrush="Black" BorderThickness=".1" Visibility="Visible" Margin="206,114,168,217">
                <TextBlock Name="clueTb" Margin="206,112,168,219" FontSize="16" />
            </Border>
            <Button Name="nextBtn" Content="Next" HorizontalAlignment="Left" Margin="658,336,0,0" VerticalAlignment="Top" Width="98" Height="42" IsEnabled="False" FontSize="16"/>
            <Button Name="verifyBtn" Content="Verify" HorizontalAlignment="Left" Margin="533,336,0,0" VerticalAlignment="Top" Width="99" Height="42" FontSize="16"/>
            <TextBox Name="guessTb" HorizontalAlignment="Left" Margin="208,324,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="192" Height="54"/>
            <Label Content="Raspuns:" HorizontalAlignment="Left" Margin="90,325,0,0" VerticalAlignment="Top" Width="110" FontSize="25" Height="53"/>

        </Grid>
    </Grid>
</Window>
