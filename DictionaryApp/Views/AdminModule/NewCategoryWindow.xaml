<Window x:Class="DictionaryApp.Views.AdminModule.NewCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DictionaryApp.Views.AdminModule"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Title="Introduceti categorie:" Height="250" Width="288">
    <Grid Margin="0,0,0,-39">
        <TextBox Name="categoryTb" Width="150" Height="30" Margin="25,46,25,108" FontSize="16"/>
        <Button Name="confirmBtn" Width="50" Height="30" Margin="150,140,50,64" Content="Confirm" Click="confirmBtn_Click"/>
        <Button Name="cancelBtn" Width="50" Height="30" Margin="50,140,150,64" Content="Anulare" Click="cancelBtn_Click"/>
    </Grid>
</Window>
